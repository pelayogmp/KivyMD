<KitchenSinkLabelForChips@MDLabel>
    theme_text_color: "Primary"


<KitchenSinkChips>
    name: "chips"

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"

        Toolbar:
            id: toolbar

        ScrollView:

            MDGridLayout:
                padding: "10dp"
                spacing: "10dp"
                cols: 1
                adaptive_height: True

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Chips with color:"

                MDSeparator:

                MDStackLayout:
                    adaptive_height: True
                    spacing: "5dp"

                    MDChip:
                        label: "Coffee"
                        color: .4470588235118, .1960787254902, 0, 1
                        icon: "coffee"
                        callback: root.callback_for_menu_items

                    MDChip:
                        label: "Duck"
                        color: .9215686274509803, 0, 0, 1
                        icon: "duck"
                        callback: root.callback_for_menu_items

                    MDChip:
                        label: "Earth"
                        color: .21176470535294, .098039627451, 1, 1
                        icon: "earth"
                        callback: root.callback_for_menu_items

                    MDChip:
                        label: "Face"
                        color: .2039215698, .4823117606, .435295883, 1
                        icon: "face"
                        callback: root.callback_for_menu_items

                    MDChip:
                        label: "Facebook"
                        color: .56078431302, .482352906, .435294883, 1
                        icon: "facebook"
                        callback: root.callback_for_menu_items

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Chip without icon:"

                MDSeparator:

                MDStackLayout:
                    adaptive_height: True
                    spacing: "5dp"

                    MDChip:
                        label: "Without icon"
                        icon: ""
                        callback: root.callback_for_menu_items

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Chips with check:"

                MDSeparator:

                MDStackLayout:
                    adaptive_height: True
                    spacing: "5dp"

                    MDChip:
                        label: "Check"
                        icon: ""
                        check: True
                        callback: root.callback_for_menu_items

                    MDChip:
                        label: "Check with icon"
                        icon: "city"
                        check: True
                        callback: root.callback_for_menu_items

                Widget:
                    size_hint_y: None
                    height: "5dp"

                KitchenSinkLabelForChips:
                    text: "Choose chip:"

                MDSeparator:

                MDChooseChip:

                    MDChip:
                        label: "Earth"
                        icon: "earth"
                        callback: root.callback_for_menu_items
                        selected_chip_color: .21176470535294, .098039627451, 1, 1

                    MDChip:
                        label: "Face"
                        icon: "face"
                        callback: root.callback_for_menu_items
                        selected_chip_color: .21176470535294, .098039627451, 1, 1

                    MDChip:
                        label: "Facebook"
                        icon: "facebook"
                        callback: root.callback_for_menu_items
                        selected_chip_color: .21176470535294, .098039627451, 1, 1
